<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_new_list"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.bgsamz.igidgets.NewList"
    tools:showIn="@layout/activity_new_list"
    android:background="#9BBEC7">

    <Button
        android:text="Next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/createListNextButton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="#468189"
        android:textColor="#F4E9CD" />

    <Button
        android:text="Add Person"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/updateItemListView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/addPersonButton"
        android:background="#468189"
        android:textColor="#F4E9CD" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:minHeight="25dp"
        android:textColorHint="#F4E9CD"
        android:textColorLink="#F4E9CD"
        android:textColor="#F4E9CD"
        android:id="@+id/updateItemListView"
        android:background="#9BBEC7"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/updateListAddPerson" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/enterListName"
        android:hint="Enter List's Name:"
        android:background="@drawable/edittext_bg"
        android:minHeight="48dp"
        android:textColor="#000000"
        android:textColorHint="#000000"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/updateListAddPerson"
        android:hint="Enter Person's Name:"
        android:background="@drawable/edittext_bg"
        android:minHeight="48dp"
        android:textColor="#000000"
        android:textColorHint="#000000"
        android:layout_below="@+id/enterListName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/addPersonButton"
        android:layout_toStartOf="@+id/addPersonButton" />

</RelativeLayout>
