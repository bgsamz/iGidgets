<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_update_list"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.bgsamz.igidgets.UpdateList"
    tools:showIn="@layout/activity_update_list"
    android:background="#9BBEC7">

    <Button
        android:text="Update List"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/updateListButton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="#468189"
        android:textColor="#F4E9CD" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:minHeight="25dp"
        android:textColorHint="#F4E9CD"
        android:textColorLink="#F4E9CD"
        android:textColor="#F4E9CD"
        android:id="@+id/updateItemListView"
        android:background="#9BBEC7"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/updateListAddItem" />

    <Button
        android:text="Add Item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/shoppingListView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/addItemButton"
        android:background="#468189"
        android:textColor="#F4E9CD" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/updateListAddItem"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="Enter Item:"
        android:layout_toLeftOf="@+id/addItemButton"
        android:layout_toStartOf="@+id/addItemButton"
        android:background="@drawable/edittext_bg"
        android:minHeight="48dp"
        android:textColor="#000000"
        android:textColorHint="#000000" />

</RelativeLayout>
